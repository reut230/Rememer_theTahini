<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_task"
    tools:context="com.example.reut.rememer_thetahini.add_task">

    <EditText
        android:id="@+id/editTextStartActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:layout_below="@+id/btn_explicit"
        android:layout_centerHorizontal="true">

        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/btn_explicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="130dp"
        android:textColor="@android:color/white"
        android:onClick="startAcivityClicked"
        android:text="Add Task"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/button"
        android:layout_marginRight="60dp"
        android:onClick="returnToMainActivity"
        android:layout_below="@+id/editTextStartActivity"
        android:layout_alignStart="@+id/editTextStartActivity"
        android:layout_marginTop="132dp" />


</RelativeLayout>
